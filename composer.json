{
    "name": "novuso/common-adapter",
    "description": "Common adapters for the Novuso Framework",
    "license": "MIT",
    "require": {
        "php": ">=7.1",
        "doctrine/collections": "1.*",
        "novuso/common": "dev-feature/experimental",
        "twig/twig": "2.*"
    },
    "require-dev": {
        "fzaninotto/faker": "1.6.*",
        "mikey179/vfsStream": "1.6.*",
        "mockery/mockery": "0.9.*",
        "monolog/monolog": "1.*",
        "phpunit/phpunit": "6.2.*",
        "squizlabs/php_codesniffer": "3.0.*"
    },
    "autoload": {
        "psr-4": {
            "Novuso\\Common\\Adapter\\": "src"
        }
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable"
}
